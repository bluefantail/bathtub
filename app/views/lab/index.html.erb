<h2>Queue</h2>
<div class="filter-nav">
	<ul>
		<li class="active">Current</li>
		<li>Active</li>
		<li>Pending</li>
		<li>Completed</li>
	</ul>
</div>
<div id="bath">
	<!-- Initial Queue render -->
	<div class="no-jobs hide">There are no Jobs here! Have one to <a href="/bath">submit</a> ?</div>
	<% if !@jobs.blank? %>
		<%= render @jobs %>
	<% end %>
</div>
<%= form_for Job.new, remote: true, authenticity_token: true do |f| %>
	<%= f.text_field :name, :placeholder => "Name for Job" %>
	<%= f.submit %>
<% end %>